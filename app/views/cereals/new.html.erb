
<div class="container">
        
        <h1>Create Cereal</h1>
        <div class="card" style="border-color:hotpink;">
                <% if flash[:errors] %>
                        <% flash[:errors].each do |error| %>
                        <p style="color:red" class="warning"><i class="fas fa-exclamation-circle"></i> <%= error %></p>
                        <% end %>
                 <% end %>
                <%= form_tag cereals_path do %>
                <div class="form-group">
                <%= label_tag :for, "Name" %><br>
                <%= text_field_tag :"cereal[name]", nil, placeholder: 'Name'  %>
                </div>
                <div class="form-group">
                <%= label_tag :for, "Amount" %><br>
                <%= text_field_tag :"cereal[amount]", nil, placeholder: 'cups' %>
                </div>
                <div class="form-group">
                        <!-- <%= submit_tag 'login' %> -->
                        <input type="submit" value="Create" class="form-button">
                </div>
                <% end %>
        </div>
</div>