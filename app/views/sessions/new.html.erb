<h1>Login in</h1>

<% if flash[:error] %>
        <%=flash[:error]  %>
<% end %>

<%= form_tag sessions_path do %>
<div class="form-group">
<%= label_tag :for, "username" %>
<%= text_field_tag :"user[username]" %>
</div>
<div class="form-group">
<%= label_tag :for, "password" %>
<%= password_field_tag :"user[password]" %>
</div>
<%= submit_tag 'login' %>
<% end %>